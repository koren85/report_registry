// Удаляем строку из таблицы с анимацией
$('#issue-row-<%= @issue_id %>').fadeOut('normal', function() {
    $(this).remove();
});

// Обновляем select2 только для удаленной задачи
var $issuesSelect = $('#issues-select');
$issuesSelect.find('option[value="<%= @issue_id %>"]').remove();
$issuesSelect.trigger('change');

// Сбрасываем чекбокс "выбрать все" если он есть
var selectAllCheckbox = document.getElementById('select-all-issues');
if (selectAllCheckbox) {
    selectAllCheckbox.checked = false;
}

// Обновляем видимость кнопки массового удаления
var deleteButton = document.getElementById('delete-selected-issues');
if (deleteButton) {
    deleteButton.style.display = 'none';
}